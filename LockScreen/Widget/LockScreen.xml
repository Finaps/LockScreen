<?xml version="1.0" encoding="UTF-8"?>
<widget id="LockScreen.Widget.LockScreen" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>LockScreen</name>
    <description>Use Phone gap to lock the screen</description>

    <properties>
		<property key="value" required="true" type="attribute">
			<caption>Value</caption>
			<category>Data source</category>
			<description>The value which should be displayed.</description> 
			<attributeTypes>
				<attributeType name="String" />
				<attributeType name="Integer" />
				<attributeType name="Long" />
			</attributeTypes>
		</property>
    </properties>
</widget>
